<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>


            .button a {
                cursor: pointer;
                border: solid 1px #949ba2;
                display: block;
                color: #949ba2;
                text-align: center;
                padding: 4px 4px;
                border-radius: 5px;
                margin: 6px;
                text-decoration:none;

            }

            .button a:hover {
                border-color: #f7af3e;
                color: #f7af3e;
                border-radius: 5px;

            }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.button}">
        <g:Label ui:field="version" ></g:Label>
        <g:Label ui:field="modified" ></g:Label>
        <g:Label ui:field="size"></g:Label>
        <g:HTMLPanel>
            <g:Anchor ui:field="download" name="version_download">Download</g:Anchor>
            <g:Hyperlink ui:field="rollback">Rollback</g:Hyperlink>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>