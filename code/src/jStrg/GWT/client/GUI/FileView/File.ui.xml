<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .file {

            width: 600px;
            border: solid 1px rgba(68, 70, 79, 0.5);
            background-color: rgba(68, 70, 79, 0.5);
            box-shadow: none;
            color: #EEEEEE;
            margin: 12px;
            padding: 12px;

        }

        .file > span {
            display: block;
            margin: 2px;

        }

        .file > div {
            margin: 0;
            width: 300px;
            display: inline-block;

        }

        .file > div > div {
            float: left;
            margin: 0px;
            width: 50%;
            padding-top: 10px;
        }



        .file a {
            display: block;
            color: #6d757d;
            text-align: center;
            padding: 5px 5px;
            text-decoration: none;
            border: solid 1px #949ba2;
            border-radius: 5px;
            text-decoration: none;
            font-size: 12px;

        }

        .file a:hover {
            border-color: #f7af3e;
            color: #f7af3e;
            border-radius: 5px;

        }

        .file td {

            border-radius: 5px;
            text-align: left;
            font-size: 12px;

        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.file}">
        <table><tr>
            <td>Name:</td>
                <td ui:field="name"></td>

        </tr>
            <tr>
                <td>Extension:</td>
                <td ui:field="extension"></td>
            </tr>

<tr>
                <td>
                    <g:Anchor ui:field="download" ></g:Anchor>
                </td>
</tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>