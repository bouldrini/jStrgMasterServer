<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .table {
            display: table;
            border-collapse: collapse;
        }

        .row {
            display: table-row-group;
        }

        .file {
            clear: both;
            float: left;
            display: block;
            width: 100px;

        }

        .row p {
            text-align: center;
            text-decoration: solid;
            display: table-cell;
            width: 25%;
            padding-top: 20px;
            padding-bottom: 5px;
            font-size: larger;
        }

        .row > div {
            display: table-row;
        }

        .row > div > div {
            display: table-cell;
            width: 25%;
            text-align: center;
            padding-top: 5px;
            padding-bottom: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.file}">
            <p></p>
            <p></p>
            <p></p>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.table}">
            <g:HTMLPanel addStyleNames="{style.row}">
                <p>Version</p>
                <p>Geändert</p>
                <p>Größe</p>
                <p></p>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="rollbackItems" addStyleNames="{style.row}">
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>