<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        <![CDATA[
        @font-face {
            font-family: 'stroke';
            src: url('../../public/stroke.ttf') format('truetype');
        }

        .loginBox {

            width: 300px;
            border: solid 1px rgba(68, 70, 79, 0.5);
            background-color: rgba(68, 70, 79, 0.5);
            box-shadow: none;
            color: #EEEEEE;
            margin: 8px;
            padding: 8px;


        }

        .loginBox > span {
            display: block;
            margin: 2px;


        }

        .loginBox > div {
            margin: 0;
            width: 300px;
            display: inline-block;



        }

        .loginBox > div > div {
            float: left;
            margin: 0px;
            width: 50%;
            padding-top: 10px;


        }

        .loginBox a {
            cursor: crosshair;
            border: solid 1px #949ba2;
            display: block;
            color: #949ba2;
            text-align: center;
            padding: 8px 8px;
            border-radius: 5px;
            margin: 4px;


        }

        .loginBox a:hover {
            border-color: #f7af3e;
            color: #f7af3e;
            border-radius: 5px;

        }
        ]]></ui:style>
    <g:HTMLPanel addStyleNames="{style.loginBox}">
        <g:InlineLabel>Name:</g:InlineLabel>
        <g:TextBox ui:field="nameTextBox" />
        <g:InlineLabel>Passwort:</g:InlineLabel>
        <g:PasswordTextBox ui:field="passwordTextBox"/>
        <div>
            <g:Hyperlink ui:field="loginBtn" text="Anmelden"/>
            <g:Hyperlink ui:field="registerLink" text="Registrieren"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>