<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>


        .user {

            width: 300px;
            border: solid 1px rgba(68, 70, 79, 0.5);
            background-color: rgba(68, 70, 79, 0.5);
            padding: 8px;


        }

        .user > span {
            display: block;
            margin: 2px;


        }

        .user > div {
            margin: 0;
            width: 300px;
            display: inline-block;


        }

        .user > div > div {
            float: left;
            margin: 0px;
            width: 50%;
            padding-top: 10px;


        }

       </ui:style>
    <g:HTMLPanel addStyleNames="{style.user}">

        <table>
            <tr>
                <td>Name:</td>
                <td ui:field="name"></td>
            </tr>

            <tr>
                <td>Role:</td>
                <td ui:field="role"></td>
            </tr>
            <tr>
                <td>Space:</td>
                <td ui:field="Space"></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>